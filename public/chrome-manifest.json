{
    "name": "Tuned2Task",
    "version": "1.0",
    "description": "Spotify Player Chrome's extension",
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "run_at": "document_start",
        "js": ["content-script.js"]
      }
    ],
    "permissions": [
      "scripting",
      "contextMenus",
      "declarativeContent",
      "tabs",
      "activeTab",
      "pageCapture"
    ],
    "host_permissions": [
      "*://*.spotify.com/"
    ],
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Spotify Player Extension",
      "default_popup": "popup.html"
    }
  }